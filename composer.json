{
  "name": "interview/commission-task-skeleton",
  "description": "Skeleton for interview task",
  "keywords": [],
  "type": "project",
  "autoload": {
    "psr-4": {
      "Interview\\CommissionTask\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Interview\\Tests\\": "tests"
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v3.64.0",
    "phpunit/phpunit": "9.5.0"
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin",
    "vendor-dir": "vendor/composer/"
  },
  "scripts": {
    "phpunit": "phpunit",
    "fix-cs": "php-cs-fixer fix",
    "test-cs": "php-cs-fixer fix --dry-run -v",
    "test": ["@phpunit", "@test-cs"]
  }
}